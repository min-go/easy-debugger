<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.dengliming.easydebugger.view.ConnectConfigDialogController">
    <content>
        <VBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets top="10" right="10" bottom="10" left="10" /></padding>
            <HBox spacing="5">
                <Label text="名称：" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300"></TextField>
            </HBox>
            <HBox spacing="5">
                <Label text="主机地址：" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <TextField fx:id="hostField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"></TextField>
            </HBox>
            <HBox spacing="5">
                <Label text="端口：" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300"></TextField>
            </HBox>
            <HBox spacing="5">
                <Label text="重复发送：" GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <CheckBox fx:id="repeatSendBox" GridPane.columnIndex="1" GridPane.rowIndex="3"></CheckBox>
            </HBox>
            <HBox spacing="5" visible="${repeatSendBox.selected}">
                <Label text="发送间隔（s）：" GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <TextField fx:id="sendIntervalField" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300"></TextField>
            </HBox>
            <HBox spacing="5" visible="${repeatSendBox.selected}">
                <Label text="发送内容：" GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="100" alignment="CENTER_RIGHT"></Label>
                <ComboBox fx:id="msgTypeComboBox" GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="90">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="字符串"/>
                            <String fx:value="16进制"/>
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="字符串"/>
                    </value>
                </ComboBox>
                <TextField fx:id="repeatSendMsg" GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="210"></TextField>
            </HBox>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="submitBtn" text="取消" prefWidth="70" onAction="#handleCancel"></Button>
                <Button fx:id="cancelBtn" text="保存" prefWidth="70" onAction="#handleSubmit"></Button>
            </HBox>
        </VBox>
    </content>
</DialogPane>
